{
  "name": "aws-test",
  "version": "1.0.0",
  "description": "",
  "main": "index.ts",
  "scripts": {
    "linter": "tslint --project .",
    "test": "mocha -b -r ts-node/register --exit --colors -t 30000000 --recursive 'src/**/*test.ts'",
    "local-admin": "export AWS_ACCESS_KEY_ID=localId && export AWS_REGION=local && export DYNAMO_ENDPOINT=http://localhost:8042 && dynamodb-admin",
    "coverage": "nyc npm run test"
  },
  "pre-commit": [
    "linter",
    "test"
  ],
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*test.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "sourceMap": true,
    "instrument": true,
    "all": true
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/aws-lambda": "^8.10.62",
    "@types/chai": "^4.1.6",
    "@types/faker": "^4.1.2",
    "@types/lodash": "^4.14.161",
    "@types/mocha": "^5.2.5",
    "@types/node": "^14.0.27",
    "@types/sinon": "^5.0.5",
    "chai": "^4.2.0",
    "faker": "^4.1.0",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "pre-commit": "^1.2.2",
    "serverless": "^2.1.1",
    "serverless-offline": "^6.7.0",
    "serverless-plugin-typescript": "^1.1.9",
    "sinon": "^6.3.5",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "@aws/dynamodb-data-mapper": "^0.7.3",
    "@aws/dynamodb-data-mapper-annotations": "^0.7.3",
    "aws-lambda": "^1.0.6",
    "aws-sdk": "^2.759.0",
    "dotenv": "^8.2.0",
    "lodash": "^4.17.20"
  }
}
